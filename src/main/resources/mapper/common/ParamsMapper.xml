<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.achilles.wild.server.business.dao.common.ParamsDao">
  <resultMap id="BaseResultMap" type="com.achilles.wild.server.entity.common.Params">
      <id column="id" jdbcType="INTEGER" property="id" />
      <result column="key" jdbcType="VARCHAR" property="key" />
      <result column="val" jdbcType="VARCHAR" property="val" />
      <result column="description" jdbcType="VARCHAR" property="description" />
      <result column="status" jdbcType="INTEGER" property="status" />
      <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
      <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
  </resultMap>

  <sql id="Base_Column_List">
      id, `key`, val,description, status, create_date, update_date
  </sql>

  <select id="selectByKey" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT
          <include refid="Base_Column_List"/>
    FROM
          params
    <where>
         <if test="key != null and key!=''">
             AND `key` = #{key,jdbcType=VARCHAR}
          </if>
    </where>
  </select>

  <insert id="insert" parameterType="com.achilles.wild.server.entity.common.Params" useGeneratedKeys="true" keyProperty="id">
    insert into
          params ( `key`, val,description)
    values
          (#{key,jdbcType=VARCHAR}, #{val,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR})
  </insert>

  <update id="updateByKey" parameterType="map">
    update
          params
    <set>
      <if test="val != null">
        val = #{val,jdbcType=VARCHAR},
      </if>
    </set>
    where `key` = #{key,jdbcType=VARCHAR}
  </update>

    <select id="selectList" parameterType="java.util.Map" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            params
        <where>
            <if test="key != null and key!=''">
                AND `key` = #{key,jdbcType=VARCHAR}
            </if>
            <if test="status != null">
                AND `status` = #{status,jdbcType=INTEGER}
            </if>
        </where>
    </select>
</mapper>